<p style="color: green"><%= notice %></p>

<% content_for :title, "tipos pagamentos" %>
<h1 class="text-secondary text-center">Tipo de pagamentos</h1>
<div class="card p-5">
    <div id="c_tipos_pagamentos">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Descrição</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody id="c_tipos_pagamentos_body">
                <% @c_tipos_pagamentos.each do |c_tipo_pagamento| %>
                <tr>
                    <td><%= c_tipo_pagamento.descricao %></td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                            <button type="button" class="btn btn-dark dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-gear"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <%= link_to "Editar", edit_c_tipo_pagamento_path(c_tipo_pagamento), 
                                class: "dropdown-item link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" %>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li>
                                    <button class="dropdown-item link-danger link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" onclick="confirmDelete('<%= c_tipo_pagamento.descricao%>', '<%= c_tipo_pagamento_path(c_tipo_pagamento)%>')"> Deletar</button>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <%= link_to "Novo tipo de pagamento", new_c_tipo_pagamento_path, class:"botao-criar" %>
</div>