
<%= simple_form_for(@c_pedido) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :data_pedido %>
    <%= f.input :entrega %>
    <%= f.association :c_usuarios %>
    <%= f.association :c_produtos %>
    <%= f.association :c_pagamentos %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
